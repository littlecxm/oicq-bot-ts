{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2017", "esnext.asynciterable", "DOM"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./bin/",
    "strictNullChecks": true,
    "isolatedModules": true,
    "noImplicitThis": true,
    "target": "esnext",
    "typeRoots": ["./node_modules/@types", "./types"],
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.test.ts"]
}
